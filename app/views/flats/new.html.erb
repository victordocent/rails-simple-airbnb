<h1>Flats#new</h1>
<p>Find me in app/views/flats/new.html.erb</p>

<%= form_for @flat do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :address %>
  <%= f.text_field :address %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :price_per_night %>
  <%= f.number_field :price_per_night %>

  <%= f.label :number_of_guests %>
  <%= f.number_field :number_of_guests %>

  <%= f.submit %>
<% end %>
